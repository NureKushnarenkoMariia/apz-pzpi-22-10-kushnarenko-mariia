<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >

        <Spinner
            android:id="@+id/animal_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            >
        </Spinner>

        <TextView
            android:id="@+id/text_cage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Клітка №12 — Барсик"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_animal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 001\nІм’я: Барсик\nВид: Кіт\nПорода: Сіамський\nВік: 3 роки"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/button_sensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сенсори"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/button_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Звіти"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/button_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нотифікації"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</LinearLayout>
